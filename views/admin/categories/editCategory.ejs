<section class="content-main">
  <ol class="breadcrumb">
    <% breadcrumbs.forEach(function(crumb, index) { %>
        <% if (index === breadcrumbs.length - 1) { %>
            <li class="breadcrumb-item active"><%= crumb.name %></li>
        <% } else { %>
            <li class="breadcrumb-item"><a href="<%= crumb.url %>"><%= crumb.name %></a></li>
        <% } %>
    <% }); %>
</ol>
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">
        <%= locals.title ? locals.title : "Edit Category" %>
      </h2>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-8">
          <form action="/admin/category/editCategory/<%= category._id %>" method="post">
            <div class="mb-4">
              <label for="category_name" class="form-label"
                >Category Name</label
              >
              <input
                type="text"
                placeholder="Category Name"
                class="form-control"
                value="<%= category.name %>"
                name="category_name"
                id="category_name"
                required
              />
            </div>
            <div class="form-group mb-3">
              <label class="form-label" for="">Status</label>
              <select
                class="form-select"
                name="status"
                aria-label="List or Unlist the Banner"
              >
                <% if (category.isActive) { %>
                <option value="true">Listed</option>
                <option value="false">Unlisted</option>
                <% } else { %>
                <option value="false">Unlisted</option>
                <option value="true">Listed</option>
                <% } %>
              </select>
            </div>
            <div class="button-grp">
              <button
                type="submit"
                class="btn btn-sm font-sm rounded btn-brand px-4"
              >
                Update
              </button>
              <button
                type="button"
                class="btn btn-sm font-sm rounded btn-brand px-4"
                onclick="window.location.href='/admin/category';"
              >
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
                            