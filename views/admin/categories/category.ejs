<section class="content-main">
    <ol class="breadcrumb">
        <% breadcrumbs.forEach(function(crumb, index) { %>
            <% if (index === breadcrumbs.length - 1) { %>
                <li class="breadcrumb-item active"><%= crumb.name %></li>
            <% } else { %>
                <li class="breadcrumb-item"><a href="<%= crumb.url %>"><%= crumb.name %></a></li>
            <% } %>
        <% }); %>
    </ol>
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Categories</h2>
        </div>
        <div>
            <a href="/admin/category/addCategory" class="btn btn-primary btn-sm rounded">Add Category</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th class="text-end">Edit</th>
                            <th class="text-end">Unlist/List</th>
                            <th class="text-end">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof categories !== "undefined" && categories.length > 0) { %>
                            <% categories.forEach((category, index) => { %>
                                <tr>
                                    <td><%- index + 1 %></td>
                                    <td><b><%- category.name %></b></td>
                                    <td><%- category.isActive ? "Listed" : "Unlisted" %></td>
                                    <td class="text-end">
                                        <a href="/admin/category/editCategory/<%= category._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                    </td>
                                    <td class="text-end">
                                        <% if (category.isActive) { %>
                                            <button class="btn btn-warning btn-sm rounded" onclick="confirmAction('<%= category._id %>', false, '<%= category.name %>')">
                                                <i class="material-icons md-delete_forever"></i> Unlist
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-success btn-sm rounded" onclick="confirmAction('<%= category._id %>', true, '<%= category.name %>')">
                                                <i class="material-icons md-add_circle"></i> List
                                            </button>
                                        <% } %>
                                    </td>
                                    <!-- <td class="text-end">
                                        <button class="btn btn-danger btn-sm rounded" onclick="confirmDelete('<%= category._id %>', '<%= category.name %>')">
                                            <i class="material-icons md-delete"></i> Delete
                                        </button>
                                    </td> -->
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <% if (categories.length > 0 && (nextPage || current == pages)) { %>
        <nav aria-label="Dashboard pagination">
            <ul class="pagination justify-content-center mt-5">
                <% if (current == 1) { %>
                    <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
                <% } else { %>
                    <li class="page-item"><a href="/admin/category/?page=1" class="page-link">First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a href="/admin/category?page=<%= i %>" class="page-link"><%= i %></a></li>
                    <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
                <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
                <% } else { %>
                    <li class="page-item"><a href="/admin/category/?page=<%= pages %>" class="page-link">Last</a></li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</section>

<script defer>
    const confirmAction = (categoryId, shouldList, categoryName) => {
        const action = shouldList ? 'list' : 'unlist';
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you want to ${action} the category "${categoryName}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: shouldList ? 'Yes, List it!' : 'Yes, Unlist it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                unlistOrListCategory(categoryId, shouldList);
            }
        });
    };

    const confirmDelete = (categoryId, categoryName) => {
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you want to delete the category "${categoryName}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                deleteCategory(categoryId);
            }
        });
    };

    const unlistOrListCategory = async (categoryId, shouldList) => {
        try {
            const response = await fetch('/admin/category/unlistOrListCategory', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ categoryId, shouldList })
            });
            const result = await response.json();
            if (result.success) {
                Swal.fire({
                    title: 'Success!',
                    text: shouldList ? 'Category has been listed.' : 'Category has been unlisted.',
                    icon: 'success',
                    timer: 1500
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: result.message || 'Something went wrong.',
                    icon: 'error',
                    timer: 1500
                });
            }
        } catch (error) {
            Swal.fire({
                title: 'Error!',
                text: 'Something went wrong.',
                icon: 'error',
                timer: 1500
            });
        }
    };

    const deleteCategory = async (categoryId) => {
        try {
            const response = await fetch('/admin/category/deleteCategory', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ categoryId })
            });
            const result = await response.json();
            if (result.success) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Category has been deleted.',
                    icon: 'success',
                    timer: 1500
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: result.message || 'Something went wrong.',
                    icon: 'error',
                    timer: 1500
                });
            }
        } catch (error) {
            Swal.fire({
                title: 'Error!',
                text: 'Something went wrong.',
                icon: 'error',
                timer: 1500
            });
        }
    };
</script>
              